# ===============================================
# ملف إعدادات البيئة الإنتاجية - منصة الصرافة
# Production Environment Configuration - Exchange Platform
# ===============================================
# تحذير: هذا الملف يحتوي على معلومات حساسة
# WARNING: This file contains sensitive information
# ===============================================

# =====================================
# قاعدة البيانات / Database Configuration
# =====================================
# PostgreSQL Connection String
# استبدل البيانات التالية بمعلومات قاعدة البيانات من Hostinger:
# - USERNAME: اسم مستخدم قاعدة البيانات
# - PASSWORD: كلمة مرور قاعدة البيانات
# - HOST: عنوان خادم قاعدة البيانات
# - DATABASE: اسم قاعدة البيانات
DATABASE_URL=postgresql://USERNAME:PASSWORD@HOST:5432/DATABASE?sslmode=require

# =====================================
# الأمان / Security Settings
# =====================================
# JWT Secret Key - مفتاح التوقيع الرقمي
# يجب توليد مفتاح قوي وفريد للإنتاج
# استخدم الأمر التالي لتوليد مفتاح آمن:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY_IN_PRODUCTION

# مفتاح الجلسات / Session Secret
# مفتاح قوي لتشفير الجلسات
SESSION_SECRET=CHANGE_THIS_TO_A_STRONG_SESSION_SECRET_IN_PRODUCTION

# مفتاح التشفير / Encryption Key
# للبيانات الحساسة
ENCRYPTION_KEY=CHANGE_THIS_TO_A_STRONG_ENCRYPTION_KEY

# =====================================
# البيئة / Environment
# =====================================
NODE_ENV=production

# =====================================
# الخادم / Server Configuration
# =====================================
# منفذ الخادم
PORT=5000

# عنوان الاستماع
HOST=0.0.0.0

# حد الطلبات
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# =====================================
# الواجهة الأمامية / Frontend Configuration
# =====================================
# استبدل yourdomain.com بالدومين الخاص بك
CLIENT_ORIGIN=https://yourdomain.com

# عنوان API للواجهة الأمامية
VITE_API_URL=https://yourdomain.com

# WebSocket URL
VITE_WS_URL=wss://yourdomain.com

# =====================================
# البريد الإلكتروني / Email Configuration
# =====================================
# إعدادات خادم البريد SMTP
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=YOUR_EMAIL_PASSWORD

# البريد الافتراضي للإرسال
EMAIL_FROM=منصة الصرافة <noreply@yourdomain.com>

# البريد الإداري
ADMIN_EMAIL=admin@yourdomain.com

# =====================================
# التخزين / Storage Configuration
# =====================================
# مجلد رفع الملفات
UPLOAD_DIR=./public/uploads
RECEIPTS_DIR=./public/receipts

# حد حجم الملفات (بالبايت)
# 100MB = 104857600 bytes
MAX_FILE_SIZE=104857600

# أنواع الملفات المسموحة
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# =====================================
# خدمات خارجية / External Services
# =====================================
# Google Cloud Storage (اختياري)
# GCS_BUCKET_NAME=exchange-platform-uploads
# GCS_PROJECT_ID=your-project-id
# GCS_KEY_FILE=./path/to/service-account-key.json

# OpenAI API (اختياري)
# OPENAI_API_KEY=sk-...

# Twilio SMS (اختياري)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# =====================================
# Redis (للتخزين المؤقت والجلسات)
# =====================================
# إذا كان متاحاً على Hostinger
# REDIS_URL=redis://username:password@localhost:6379/0
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# =====================================
# إعدادات الأداء / Performance Settings
# =====================================
# Workers
WORKER_PROCESSES=4

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Cache TTL (بالثواني)
CACHE_TTL=3600

# =====================================
# المراقبة والسجلات / Monitoring & Logging
# =====================================
# مستوى السجلات
LOG_LEVEL=info

# مجلد السجلات
LOG_DIR=./logs

# حجم ملف السجل الأقصى
LOG_MAX_SIZE=10m

# عدد ملفات السجلات المحفوظة
LOG_MAX_FILES=14

# =====================================
# الأمان الإضافي / Additional Security
# =====================================
# CORS Origins (فاصلة بين المواقع المتعددة)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Cookie Settings
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict
COOKIE_MAX_AGE=86400000

# CSRF Protection
CSRF_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET

# =====================================
# معلومات النظام / System Information
# =====================================
# معلومات المنصة
APP_NAME=منصة الصرافة
APP_VERSION=1.0.0
APP_DESCRIPTION=منصة صرافة العملات الرقمية

# معلومات الشركة
COMPANY_NAME=اسم الشركة
COMPANY_EMAIL=info@yourdomain.com
COMPANY_PHONE=+966xxxxxxxxx

# =====================================
# إعدادات التطوير (تعطيل في الإنتاج)
# =====================================
DEBUG=false
VERBOSE_LOGGING=false

# =====================================
# النسخ الاحتياطي / Backup Settings
# =====================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

